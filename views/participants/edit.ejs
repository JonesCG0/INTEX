<%- include('../partials/header', { title: 'Edit Participant', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-pencil-fill"></i> Edit Participant</h1>
    <p>Update participant information and details</p>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <% if (error) { %>
          <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
          </div>
        <% } %>

        <form action="/participants/<%= participant.participantid %>/edit" method="POST">
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="participantfirstname" class="form-label">First Name</label>
              <input type="text" id="participantfirstname" name="participantfirstname" class="form-control" value="<%= participant.participantfirstname || '' %>">
            </div>

            <div class="col-md-6 mb-3">
              <label for="participantlastname" class="form-label">Last Name</label>
              <input type="text" id="participantlastname" name="participantlastname" class="form-control" value="<%= participant.participantlastname || '' %>">
            </div>
          </div>

          <div class="mb-3">
            <label for="participantemail" class="form-label">Email</label>
            <input type="email" id="participantemail" name="participantemail" class="form-control" value="<%= participant.participantemail || '' %>">
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="participantphone" class="form-label">Phone</label>
              <input type="text" id="participantphone" name="participantphone" class="form-control" value="<%= participant.participantphone || '' %>">
            </div>

            <div class="col-md-6 mb-3">
              <label for="participantzip" class="form-label">ZIP Code</label>
              <input type="text" id="participantzip" name="participantzip" class="form-control" value="<%= participant.participantzip || '' %>">
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="participantdob" class="form-label">Date of Birth</label>
              <input type="text" id="participantdob" name="participantdob" class="form-control" value="<%= participant.participantdob || '' %>">
            </div>

            <div class="col-md-6 mb-3">
              <label for="participantrole" class="form-label">Role</label>
              <input type="text" id="participantrole" name="participantrole" class="form-control" value="<%= participant.participantrole || '' %>">
            </div>
          </div>

          <div class="mb-3">
            <label for="participantschooloremployer" class="form-label">School or Employer</label>
            <input type="text" id="participantschooloremployer" name="participantschooloremployer" class="form-control" value="<%= participant.participantschooloremployer || '' %>">
          </div>

          <div class="mb-3">
            <label for="participantfieldofinterest" class="form-label">Field of Interest</label>
            <input type="text" id="participantfieldofinterest" name="participantfieldofinterest" class="form-control" value="<%= participant.participantfieldofinterest || '' %>">
          </div>

          <div class="d-grid gap-2 d-md-flex">
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-check-circle-fill"></i> Save Changes
            </button>
            <a href="/participants/<%= participant.participantid %>" class="btn btn-secondary">
              <i class="bi bi-x-circle"></i> Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
