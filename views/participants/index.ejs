<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Participants</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <h1>Participants</h1>
    <a href="/participants/new" class="btn">Add New Participant</a>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>DOB</th>
          <th>Role</th>
          <th>Phone</th>
          <th>ZIP</th>
          <th>School/Employer</th>
          <th>Field of Interest</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% participants.forEach(p => { %>
          <tr>
            <td><%= p.participantid %></td>
            <td><%= p.participantemail || '—' %></td>
            <td><%= p.participantfirstname || '—' %></td>
            <td><%= p.participantlastname || '—' %></td>
            <td><%= p.participantdob || '—' %></td>
            <td><%= p.participantrole || '—' %></td>
            <td><%= p.participantphone || '—' %></td>
            <td><%= p.participantzip || '—' %></td>
            <td><%= p.participantschooloremployer || '—' %></td>
            <td><%= p.participantfieldofinterest || '—' %></td>
            <td>
              <a href="/participants/<%= p.participantid %>">View</a>
              <a href="/participants/<%= p.participantid %>/edit">Edit</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
