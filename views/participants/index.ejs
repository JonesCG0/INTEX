<%- include('../partials/header', { title: 'Participants', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-people-fill"></i> Participants</h1>
    <p>Manage program participants and their information</p>
  </div>
</div>

<div class="container">
  <div class="card">
    <% if (user && user.role === 'admin') { %>
    <div class="mb-3">
      <a href="/participants/new" class="btn btn-success">
        <i class="bi bi-person-plus-fill"></i> Add New Participant
      </a>
    </div>
    <% } %>

    <div class="d-flex flex-column flex-lg-row align-items-lg-center gap-2 mb-3">
      <div class="d-flex align-items-center gap-2 flex-grow-1 flex-lg-grow-0">
        <input
          type="search"
          class="form-control w-auto"
          style="min-width: 240px; max-width: 320px;"
          placeholder="Search participants"
          aria-label="Search participants"
          data-search-for="participants-table"
        />
        <nav aria-label="Participants pagination (top)">
          <ul class="pagination pagination-sm mb-0 pagination-soft" data-pagination-for="participants-table"></ul>
        </nav>
      </div>
      <div class="d-flex align-items-center gap-2 ms-lg-auto">
        <label for="participants-page-size" class="text-muted small mb-0">Rows/page</label>
        <select
          id="participants-page-size"
          class="form-select form-select-sm w-auto"
          data-page-size-for="participants-table"
        >
          <option value="10">10</option>
          <option value="20" selected>20</option>
          <option value="30">30</option>
          <option value="40">40</option>
          <option value="50">50</option>
        </select>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table" data-table-id="participants-table">
        <thead>
          <tr>
            <th>
              <a href="?sortBy=participantfirstname&sortOrder=<%= sortBy === 'participantfirstname' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Name
                <% if (sortBy === 'participantfirstname') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=participantemail&sortOrder=<%= sortBy === 'participantemail' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Email
                <% if (sortBy === 'participantemail') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=participantdob&sortOrder=<%= sortBy === 'participantdob' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                DOB
                <% if (sortBy === 'participantdob') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=participantrole&sortOrder=<%= sortBy === 'participantrole' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Role
                <% if (sortBy === 'participantrole') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=participantphone&sortOrder=<%= sortBy === 'participantphone' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Phone
                <% if (sortBy === 'participantphone') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=participantzip&sortOrder=<%= sortBy === 'participantzip' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                ZIP
                <% if (sortBy === 'participantzip') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=participantschooloremployer&sortOrder=<%= sortBy === 'participantschooloremployer' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                School/Employer
                <% if (sortBy === 'participantschooloremployer') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=participantfieldofinterest&sortOrder=<%= sortBy === 'participantfieldofinterest' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Field of Interest
                <% if (sortBy === 'participantfieldofinterest') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <% if (user && user.role === 'admin') { %>
            <th>Actions</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% participants.forEach(p => { %>
          <tr>
            <td>
              <strong
                ><%= p.participantfirstname || '-' %> <%= p.participantlastname
                || '' %></strong
              >
            </td>
            <td><%= p.participantemail || '-' %></td>
            <td>
              <% if (p.participantdob) { %>
                <%= new Date(p.participantdob).toLocaleString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                }) %>
              <% } else { %>
                -
              <% } %>
            </td>
            <td>
              <span class="badge bg-primary"
                ><%= p.participantrole || '-' %></span
              >
            </td>
            <td><%= p.participantphone || '-' %></td>
            <td><%= p.participantzip || '-' %></td>
            <td><%= p.participantschooloremployer || '-' %></td>
            <td><%= p.participantfieldofinterest || '-' %></td>
            <% if (user && user.role === 'admin') { %>
            <td>
              <a
                href="/participants/<%= p.participantid %>"
                class="btn btn-sm btn-info me-1"
              >
                <i class="bi bi-eye-fill"></i> View
              </a>
              <a
                href="/participants/<%= p.participantid %>/edit"
                class="btn btn-sm btn-primary"
              >
                <i class="bi bi-pencil-fill"></i> Edit
              </a>
            </td>
            <% } %>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <div class="d-flex justify-content-center mt-3">
      <nav aria-label="Participants pagination">
        <ul class="pagination pagination-sm mb-0 pagination-soft" data-pagination-for="participants-table"></ul>
      </nav>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
