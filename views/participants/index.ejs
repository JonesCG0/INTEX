<%- include('../partials/header', { title: 'Participants', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-people-fill"></i> Participants</h1>
    <p>Manage program participants and their information</p>
  </div>
</div>

<div class="container">
  <div class="card">
    <div class="mb-3">
      <a href="/participants/new" class="btn btn-success">
        <i class="bi bi-person-plus-fill"></i> Add New Participant
      </a>
    </div>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>DOB</th>
            <th>Role</th>
            <th>Phone</th>
            <th>ZIP</th>
            <th>School/Employer</th>
            <th>Field of Interest</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% participants.forEach(p => { %>
            <tr>
              <td><%= p.participantid %></td>
              <td>
                <strong><%= p.participantfirstname || '—' %> <%= p.participantlastname || '' %></strong>
              </td>
              <td><%= p.participantemail || '—' %></td>
              <td><%= p.participantdob || '—' %></td>
              <td>
                <span class="badge bg-primary"><%= p.participantrole || '—' %></span>
              </td>
              <td><%= p.participantphone || '—' %></td>
              <td><%= p.participantzip || '—' %></td>
              <td><%= p.participantschooloremployer || '—' %></td>
              <td><%= p.participantfieldofinterest || '—' %></td>
              <td>
                <a href="/participants/<%= p.participantid %>" class="btn btn-sm btn-info me-1">
                  <i class="bi bi-eye-fill"></i> View
                </a>
                <a href="/participants/<%= p.participantid %>/edit" class="btn btn-sm btn-primary">
                  <i class="bi bi-pencil-fill"></i> Edit
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
