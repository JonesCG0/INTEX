<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Participant</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <h1>Add New Participant</h1>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form action="/participants/new" method="POST">
      <div class="form-group">
        <label for="participantemail">Email</label>
        <input type="email" id="participantemail" name="participantemail">
      </div>

      <div class="form-group">
        <label for="participantfirstname">First Name</label>
        <input type="text" id="participantfirstname" name="participantfirstname">
      </div>

      <div class="form-group">
        <label for="participantlastname">Last Name</label>
        <input type="text" id="participantlastname" name="participantlastname">
      </div>

      <div class="form-group">
        <label for="participantdob">Date of Birth</label>
        <input type="text" id="participantdob" name="participantdob" placeholder="YYYY-MM-DD or text">
      </div>

      <div class="form-group">
        <label for="participantrole">Role</label>
        <input type="text" id="participantrole" name="participantrole">
      </div>

      <div class="form-group">
        <label for="participantphone">Phone</label>
        <input type="text" id="participantphone" name="participantphone">
      </div>

      <div class="form-group">
        <label for="participantzip">ZIP</label>
        <input type="text" id="participantzip" name="participantzip">
      </div>

      <div class="form-group">
        <label for="participantschooloremployer">School or Employer</label>
        <input type="text" id="participantschooloremployer" name="participantschooloremployer">
      </div>

      <div class="form-group">
        <label for="participantfieldofinterest">Field of Interest</label>
        <input type="text" id="participantfieldofinterest" name="participantfieldofinterest">
      </div>

      <button type="submit" class="btn">Create Participant</button>
      <a href="/participants" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
