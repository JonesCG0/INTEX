<%- include('../partials/header', { title: 'Participant Details', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-person-circle"></i> Participant Details</h1>
    <p>View participant information and profile</p>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <h3 class="mb-4">
          <%= participant.participantfirstname || '' %> <%= participant.participantlastname || '' %>
        </h3>

        <div class="row mb-3">
          <div class="col-md-6">
            <p><strong><i class="bi bi-hash"></i> ID:</strong> <%= participant.participantid %></p>
            <p><strong><i class="bi bi-envelope-fill"></i> Email:</strong>
              <a href="mailto:<%= participant.participantemail %>"><%= participant.participantemail || '-' %></a>
            </p>
            <p><strong><i class="bi bi-telephone-fill"></i> Phone:</strong> <%= participant.participantphone || '-' %></p>
          </div>
          <div class="col-md-6">
            <p><strong><i class="bi bi-calendar3"></i> Date of Birth:</strong>
              <% if (participant.participantdob) { %>
                <%= new Date(participant.participantdob).toLocaleString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                }) %>
              <% } else { %>
                -
              <% } %>
            </p>
            <p><strong><i class="bi bi-person-badge"></i> Role:</strong>
              <span class="badge bg-primary"><%= participant.participantrole || '-' %></span>
            </p>
            <p><strong><i class="bi bi-mailbox"></i> ZIP Code:</strong> <%= participant.participantzip || '-' %></p>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <p><strong><i class="bi bi-building"></i> School/Employer:</strong> <%= participant.participantschooloremployer || '-' %></p>
          </div>
          <div class="col-md-6">
            <p><strong><i class="bi bi-star-fill"></i> Field of Interest:</strong> <%= participant.participantfieldofinterest || '-' %></p>
          </div>
        </div>

        <hr>

        <div class="d-grid gap-2 d-md-flex">
          <a href="/participants/<%= participant.participantid %>/edit" class="btn btn-primary">
            <i class="bi bi-pencil-fill"></i> Edit Participant
          </a>
          <a href="/participants" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Participants
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
