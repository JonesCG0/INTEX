<%- include('../partials/header', { title: 'Assign Milestone', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-link-45deg"></i> Assign Milestone</h1>
    <p>Link a milestone to a participant</p>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card">
        <% if (error) { %>
          <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
          </div>
        <% } %>

        <form action="/milestones/assign" method="POST">
          <div class="mb-3">
            <label for="milestoneid" class="form-label">Milestone ID</label>
            <input type="number" id="milestoneid" name="milestoneid" class="form-control" placeholder="Enter milestone ID" required>
          </div>

          <div class="mb-3">
            <label for="participantid" class="form-label">Participant ID</label>
            <input type="number" id="participantid" name="participantid" class="form-control" placeholder="Enter participant ID" required>
          </div>

          <div class="d-grid gap-2 d-md-flex">
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-check-circle-fill"></i> Assign Milestone
            </button>
            <a href="/milestones" class="btn btn-secondary">
              <i class="bi bi-x-circle"></i> Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
