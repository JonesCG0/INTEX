<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Assign Milestone</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <h1>Assign Milestone</h1>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form action="/milestones/assign" method="POST">
      <div class="form-group">
        <label for="milestoneid">Milestone:</label>
        <select id="milestoneid" name="milestoneid" required>
          <option value="">Select a milestone</option>
          <!-- Populate with milestones from database -->
        </select>
      </div>

      <div class="form-group">
        <label for="participantid">Participant:</label>
        <select id="participantid" name="participantid" required>
          <option value="">Select a participant</option>
          <!-- Populate with participants from database -->
        </select>
      </div>

      <button type="submit" class="btn">Assign Milestone</button>
      <a href="/milestones" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
