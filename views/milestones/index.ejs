<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Milestones</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <h1>Milestones</h1>
    <a href="/milestones/new" class="btn">Add New Milestone</a>
    <a href="/milestones/assign" class="btn">Assign Milestone</a>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Date</th>
          <th>Participant ID</th>
        </tr>
      </thead>
      <tbody>
        <% milestones.forEach(m => { %>
          <tr>
            <td><%= m.milestoneid %></td>
            <td><%= m.milestonetitle || '—' %></td>
            <td><%= m.milestonedate || '—' %></td>
            <td><%= m.participantid || '—' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
