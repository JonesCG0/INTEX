<%- include('../partials/header', { title: 'Edit Event', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-pencil-fill"></i> Edit Event</h1>
    <p>Update event information and details</p>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <% if (error) { %>
        <div class="alert alert-danger">
          <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
        </div>
        <% } %>

        <form action="/events/<%= event.eventid %>/edit" method="POST">
          <div class="mb-3">
            <label for="title" class="form-label">Event Title</label>
            <input
              type="text"
              id="title"
              name="title"
              class="form-control"
              value="<%= event.title || '' %>"
              readonly
              style="background-color: #e9ecef; cursor: not-allowed;"
            />
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="eventlocation" class="form-label">Location</label>
              <input
                type="text"
                id="eventlocation"
                name="eventlocation"
                class="form-control"
                value="<%= event.eventlocation || '' %>"
              />
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="date" class="form-label">Start Date/Time</label>
              <input
                type="datetime-local"
                id="date"
                name="date"
                class="form-control"
                value="<%= event.dateInputValue || '' %>"
              />
            </div>

            <div class="col-md-6 mb-3">
              <label for="eventdatetimeend" class="form-label"
                >End Date/Time</label
              >
              <input
                type="datetime-local"
                id="eventdatetimeend"
                name="eventdatetimeend"
                class="form-control"
                value="<%= event.eventdatetimeendInputValue || '' %>"
              />
            </div>
          </div>

          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="eventcapacity" class="form-label">Capacity</label>
              <input
                type="text"
                id="eventcapacity"
                name="eventcapacity"
                class="form-control"
                value="<%= event.eventcapacity || '' %>"
              />
            </div>

            <div class="col-md-4 mb-3">
              <label for="eventregistrationdeadline" class="form-label"
                >Registration Deadline</label
              >
              <input
                type="datetime-local"
                id="eventregistrationdeadline"
                name="eventregistrationdeadline"
                class="form-control"
                value="<%= event.eventregistrationdeadlineInputValue || '' %>"
              />
            </div>
          </div>

          <div class="d-grid gap-2 d-md-flex">
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-check-circle-fill"></i> Save Changes
            </button>
            <a href="/events/<%= event.eventid %>" class="btn btn-secondary">
              <i class="bi bi-x-circle"></i> Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
