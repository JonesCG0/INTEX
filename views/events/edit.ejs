<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Event</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <h1>Edit Event</h1>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form action="/events/<%= event.eventid %>/edit" method="POST">
      <div class="form-group">
        <label for="title">Title (eventname)</label>
        <input type="text" id="title" name="title" value="<%= event.title || '' %>" required>
      </div>

      <div class="form-group">
        <label for="eventtype">Type</label>
        <input type="text" id="eventtype" name="eventtype" value="<%= event.eventtype || '' %>">
      </div>

      <div class="form-group">
        <label for="eventdescription">Description</label>
        <textarea id="eventdescription" name="eventdescription"><%= event.eventdescription || '' %></textarea>
      </div>

      <div class="form-group">
        <label for="date">Start Date/Time</label>
        <input type="text" id="date" name="date" value="<%= event.date || '' %>">
      </div>

      <div class="form-group">
        <label for="eventdatetimeend">End Date/Time</label>
        <input type="text" id="eventdatetimeend" name="eventdatetimeend" value="<%= event.eventdatetimeend || '' %>">
      </div>

      <div class="form-group">
        <label for="eventlocation">Location</label>
        <input type="text" id="eventlocation" name="eventlocation" value="<%= event.eventlocation || '' %>">
      </div>

      <div class="form-group">
        <label for="eventcapacity">Capacity</label>
        <input type="text" id="eventcapacity" name="eventcapacity" value="<%= event.eventcapacity || '' %>">
      </div>

      <div class="form-group">
        <label for="eventregistrationdeadline">Registration Deadline</label>
        <input type="text" id="eventregistrationdeadline" name="eventregistrationdeadline" value="<%= event.eventregistrationdeadline || '' %>">
      </div>

      <div class="form-group">
        <label for="eventrecurrencepattern">Recurrence Pattern</label>
        <input type="text" id="eventrecurrencepattern" name="eventrecurrencepattern" value="<%= event.eventrecurrencepattern || '' %>">
      </div>

      <div class="form-group">
        <label for="eventdefaultcapacity">Default Capacity</label>
        <input type="text" id="eventdefaultcapacity" name="eventdefaultcapacity" value="<%= event.eventdefaultcapacity || '' %>">
      </div>

      <button type="submit" class="btn">Save Changes</button>
      <a href="/events/<%= event.eventid %>" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
