<%- include('../partials/header', { title: 'Events', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-calendar-event-fill"></i> Events</h1>
    <p>Manage workshops, webinars, and community events</p>
  </div>
</div>

<div class="container">
  <div class="card">
    <% if (user && user.role === 'admin') { %>
    <div class="mb-3">
      <a href="/events/new" class="btn btn-success">
        <i class="bi bi-plus-circle-fill"></i> Add New Event
      </a>
    </div>
    <% } %>

    <div class="d-flex flex-column flex-lg-row align-items-lg-center gap-2 mb-3">
      <div class="d-flex align-items-center gap-2 flex-grow-1 flex-lg-grow-0">
        <input
          type="search"
          class="form-control w-auto"
          style="min-width: 240px; max-width: 320px;"
          placeholder="Search events"
          aria-label="Search events"
          data-search-for="events-table"
        />
        <nav aria-label="Events pagination (top)">
          <ul class="pagination pagination-sm mb-0 pagination-soft" data-pagination-for="events-table"></ul>
        </nav>
      </div>
      <div class="d-flex align-items-center gap-2 ms-lg-auto">
        <label for="events-page-size" class="text-muted small mb-0">Rows/page</label>
        <select
          id="events-page-size"
          class="form-select form-select-sm w-auto"
          data-page-size-for="events-table"
        >
          <option value="10">10</option>
          <option value="20" selected>20</option>
          <option value="30">30</option>
          <option value="40">40</option>
          <option value="50">50</option>
        </select>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table" data-table-id="events-table">
        <thead>
          <tr>
            <th>
              <a href="?sortBy=eventname&sortOrder=<%= sortBy === 'eventname' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Title
                <% if (sortBy === 'eventname') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=eventtype&sortOrder=<%= sortBy === 'eventtype' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Type
                <% if (sortBy === 'eventtype') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=eventdatetimestart&sortOrder=<%= sortBy === 'eventdatetimestart' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Date
                <% if (sortBy === 'eventdatetimestart') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=eventlocation&sortOrder=<%= sortBy === 'eventlocation' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Location
                <% if (sortBy === 'eventlocation') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=eventcapacity&sortOrder=<%= sortBy === 'eventcapacity' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Capacity
                <% if (sortBy === 'eventcapacity') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=eventregistrationdeadline&sortOrder=<%= sortBy === 'eventregistrationdeadline' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Reg Deadline
                <% if (sortBy === 'eventregistrationdeadline') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <% if (user && user.role === 'admin') { %>
            <th>Actions</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% events.forEach(event => { %>
          <tr>
            <td><strong><%= event.eventname || '—' %></strong></td>
            <td>
              <span class="badge bg-info"><%= event.eventtype || '—' %></span>
            </td>
            <td>
              <% if (event.eventdatetimestart) { %> <%= new
              Date(event.eventdatetimestart).toLocaleString('en-US', { year:
              'numeric', month: 'short', day: 'numeric', hour: '2-digit',
              minute: '2-digit' }) %> <% } else { %> — <% } %>
            </td>
            <td><%= event.eventlocation || '—' %></td>
            <td><%= event.eventcapacity || '—' %></td>
            <td>
              <% if (event.eventregistrationdeadline) { %> <%= new
              Date(event.eventregistrationdeadline).toLocaleString('en-US', {
              year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit',
              minute: '2-digit' }) %> <% } else { %> — <% } %>
            </td>
            <% if (user && user.role === 'admin') { %>
            <td>
              <a
                href="/events/<%= event.eventoccurrenceid %>"
                class="btn btn-sm btn-info me-1"
              >
                <i class="bi bi-eye-fill"></i> View
              </a>
              <a
                href="/events/<%= event.eventoccurrenceid %>/edit"
                class="btn btn-sm btn-primary"
              >
                <i class="bi bi-pencil-fill"></i> Edit
              </a>
            </td>
            <% } %>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <div class="d-flex justify-content-center mt-3">
      <nav aria-label="Events pagination">
        <ul class="pagination pagination-sm mb-0 pagination-soft" data-pagination-for="events-table"></ul>
      </nav>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
