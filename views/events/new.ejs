<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Event</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <h1>Add New Event</h1>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form action="/events/new" method="POST">
      <div class="form-group">
        <label for="title">Title (eventname)</label>
        <input type="text" id="title" name="title" required>
      </div>

      <div class="form-group">
        <label for="eventtype">Type</label>
        <input type="text" id="eventtype" name="eventtype">
      </div>

      <div class="form-group">
        <label for="eventdescription">Description</label>
        <textarea id="eventdescription" name="eventdescription"></textarea>
      </div>

      <div class="form-group">
        <label for="date">Start Date/Time (eventdatetimestart)</label>
        <input type="text" id="date" name="date" placeholder="YYYY-MM-DD HH:MM or text" required>
      </div>

      <div class="form-group">
        <label for="eventdatetimeend">End Date/Time</label>
        <input type="text" id="eventdatetimeend" name="eventdatetimeend" placeholder="YYYY-MM-DD HH:MM or text">
      </div>

      <div class="form-group">
        <label for="eventlocation">Location</label>
        <input type="text" id="eventlocation" name="eventlocation">
      </div>

      <div class="form-group">
        <label for="eventcapacity">Capacity</label>
        <input type="text" id="eventcapacity" name="eventcapacity">
      </div>

      <div class="form-group">
        <label for="eventregistrationdeadline">Registration Deadline</label>
        <input type="text" id="eventregistrationdeadline" name="eventregistrationdeadline" placeholder="YYYY-MM-DD or text">
      </div>

      <div class="form-group">
        <label for="eventrecurrencepattern">Recurrence Pattern</label>
        <input type="text" id="eventrecurrencepattern" name="eventrecurrencepattern">
      </div>

      <div class="form-group">
        <label for="eventdefaultcapacity">Default Capacity</label>
        <input type="text" id="eventdefaultcapacity" name="eventdefaultcapacity">
      </div>

      <button type="submit" class="btn">Create Event</button>
      <a href="/events" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
