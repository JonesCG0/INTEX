<%- include('../partials/header', { title: 'Add Event', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-calendar-plus-fill"></i> Add New Event</h1>
    <p>Create a new workshop, webinar, or community event</p>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <% if (error) { %>
        <div class="alert alert-danger">
          <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
        </div>
        <% } %>

        <form action="/events/new" method="POST">
          <div class="mb-3">
            <label for="title" class="form-label">Event Title</label>
            <select
              id="title"
              name="eventTemplateID"
              class="form-control"
              required
            >
              <option value="">Select an event...</option>
              <% eventTemplates.forEach(eventTemplate => { %>
              <option value="<%= eventTemplate.eventtemplateid %>">
                <%= eventTemplate.eventname %>
              </option>
              <% }); %>
            </select>
          </div>

          <div class="col-md-6 mb-3">
            <label for="eventlocation" class="form-label">Location</label>
            <input
              type="text"
              id="eventlocation"
              name="eventlocation"
              class="form-control"
              placeholder="Event location"
            />
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="date" class="form-label">Start Date/Time</label>
              <input
                type="datetime-local"
                id="date"
                name="eventdatetimestart"
                class="form-control"
                required
              />
            </div>

            <div class="col-md-6 mb-3">
              <label for="eventdatetimeend" class="form-label"
                >End Date/Time</label
              >
              <input
                type="datetime-local"
                id="eventdatetimeend"
                name="eventdatetimeend"
                class="form-control"
              />
            </div>
          </div>

          <div class="row">
            <div class="col-md-4 mb-3">
              <label for="eventcapacity" class="form-label">Capacity</label>
              <input
                type="text"
                id="eventcapacity"
                name="eventcapacity"
                class="form-control"
                placeholder="Max attendees"
              />
            </div>

            <div class="col-md-4 mb-3">
              <label for="eventregistrationdeadline" class="form-label"
                >Registration Deadline</label
              >
              <input
                type="datetime-local"
                id="eventregistrationdeadline"
                name="eventregistrationdeadline"
                class="form-control"
                placeholder="YYYY-MM-DD"
              />
            </div>
          </div>

          <div class="d-grid gap-2 d-md-flex">
            <button type="submit" class="btn btn-success">
              <i class="bi bi-check-circle-fill"></i> Create Event
            </button>
            <a href="/events" class="btn btn-secondary">
              <i class="bi bi-x-circle"></i> Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
