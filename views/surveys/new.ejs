<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Survey</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <h1>Add New Survey</h1>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form action="/surveys/new" method="POST">
      <div class="form-group">
        <label for="surveysatisfactionscore">Satisfaction Score</label>
        <input type="text" id="surveysatisfactionscore" name="surveysatisfactionscore">
      </div>

      <div class="form-group">
        <label for="surveyusefulnessscore">Usefulness Score</label>
        <input type="text" id="surveyusefulnessscore" name="surveyusefulnessscore">
      </div>

      <div class="form-group">
        <label for="surveyinstructorscore">Instructor Score</label>
        <input type="text" id="surveyinstructorscore" name="surveyinstructorscore">
      </div>

      <div class="form-group">
        <label for="surveyrecommendationscore">Recommendation Score</label>
        <input type="text" id="surveyrecommendationscore" name="surveyrecommendationscore">
      </div>

      <div class="form-group">
        <label for="surveyoverallscore">Overall Score</label>
        <input type="text" id="surveyoverallscore" name="surveyoverallscore">
      </div>

      <div class="form-group">
        <label for="surveysubmissiondate">Submission Date</label>
        <input type="text" id="surveysubmissiondate" name="surveysubmissiondate" placeholder="YYYY-MM-DD or text">
      </div>

      <div class="form-group">
        <label for="registrationid">Registration ID</label>
        <input type="number" id="registrationid" name="registrationid">
      </div>

      <button type="submit" class="btn">Create Survey</button>
      <a href="/surveys" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
