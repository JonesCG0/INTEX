<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Surveys</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <h1>Surveys</h1>
    <a href="/surveys/new" class="btn">Add New Survey</a>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Satisfaction</th>
          <th>Usefulness</th>
          <th>Instructor</th>
          <th>Recommendation</th>
          <th>Overall</th>
          <th>Submission Date</th>
          <th>Registration ID</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% surveys.forEach(s => { %>
          <tr>
            <td><%= s.surveyid %></td>
            <td><%= s.surveysatisfactionscore || '—' %></td>
            <td><%= s.surveyusefulnessscore || '—' %></td>
            <td><%= s.surveyinstructorscore || '—' %></td>
            <td><%= s.surveyrecommendationscore || '—' %></td>
            <td><%= s.surveyoverallscore || '—' %></td>
            <td><%= s.surveysubmissiondate || '—' %></td>
            <td><%= s.registrationid || '—' %></td>
            <td>
              <a href="/surveys/<%= s.surveyid %>">View</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
