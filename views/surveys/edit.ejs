<%- include('../partials/header', { title: 'Edit Survey', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-clipboard-data-fill"></i> Edit Survey</h1>
    <p>Update participant feedback and satisfaction scores</p>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <% if (error) { %>
          <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
          </div>
        <% } %>

        <form action="/surveys/<%= survey.surveyid %>/edit" method="POST">
          <div class="row mb-3">
            <div class="col-md-6 mb-3">
              <label for="surveysatisfactionscore" class="form-label">
                <strong>Satisfaction (1-5)</strong>
              </label>
              <input
                type="number"
                id="surveysatisfactionscore"
                name="surveysatisfactionscore"
                class="form-control"
                min="1"
                max="5"
                value="<%= survey.surveysatisfactionscore || '' %>"
                required
              />
            </div>
            <div class="col-md-6 mb-3">
              <label for="surveyusefulnessscore" class="form-label">
                <strong>Usefulness (1-5)</strong>
              </label>
              <input
                type="number"
                id="surveyusefulnessscore"
                name="surveyusefulnessscore"
                class="form-control"
                min="1"
                max="5"
                value="<%= survey.surveyusefulnessscore || '' %>"
                required
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6 mb-3">
              <label for="surveyinstructorscore" class="form-label">
                <strong>Instructor (1-5)</strong>
              </label>
              <input
                type="number"
                id="surveyinstructorscore"
                name="surveyinstructorscore"
                class="form-control"
                min="1"
                max="5"
                value="<%= survey.surveyinstructorscore || '' %>"
                required
              />
            </div>
            <div class="col-md-6 mb-3">
              <label for="surveyrecommendationscore" class="form-label">
                <strong>Recommendation (1-5)</strong>
              </label>
              <input
                type="number"
                id="surveyrecommendationscore"
                name="surveyrecommendationscore"
                class="form-control"
                min="1"
                max="5"
                value="<%= survey.surveyrecommendationscore || '' %>"
                required
              />
            </div>
          </div>

          <div class="d-grid gap-2 d-md-flex">
            <button type="submit" class="btn btn-success">
              <i class="bi bi-check-circle-fill"></i> Save Changes
            </button>
            <a href="/surveys/<%= survey.surveyid %>" class="btn btn-secondary">
              <i class="bi bi-x-circle"></i> Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>

