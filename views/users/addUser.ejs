<%- include('../partials/header', { title: 'Add User', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-person-plus-fill"></i> Add New User</h1>
    <p>Create a new user account</p>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card">
        <% if (error) { %>
          <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
          </div>
        <% } %>

        <form action="/users/new" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" name="username" class="form-control" placeholder="Enter username" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Enter password" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Photo (optional)</label>
            <input type="file" name="photoFile" class="form-control" accept="image/*">
            <small class="text-muted">Upload a profile photo (max 5MB)</small>
          </div>

          <div class="mb-3">
            <label class="form-label">Role</label>
            <select name="role" class="form-select">
              <option value="participant">Participant</option>
              <option value="admin">Administrator</option>
            </select>
          </div>

          <div class="d-grid gap-2 d-md-flex">
            <button type="submit" class="btn btn-success">
              <i class="bi bi-check-circle-fill"></i> Create User
            </button>
            <a href="/users" class="btn btn-secondary">
              <i class="bi bi-x-circle"></i> Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
