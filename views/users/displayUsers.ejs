<%- include('../partials/header', { title: 'Users', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-people-fill"></i> Users</h1>
    <p>Manage system users and their roles</p>
  </div>
</div>

<div class="container">
  <div class="card">
    <% if (user.role === 'A') { %>
      <div class="mb-3">
        <a href="/users/new" class="btn btn-success">
          <i class="bi bi-person-plus-fill"></i> Add User
        </a>
      </div>
    <% } %>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Role</th>
            <th>Photo</th>
            <% if (user.role === 'A') { %>
              <th>Actions</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
            <tr>
              <td><%= u.userid %></td>
              <td><strong><%= u.username %></strong></td>
              <td>
                <% if (u.role === 'A') { %>
                  <span class="badge bg-danger">Admin</span>
                <% } else { %>
                  <span class="badge bg-secondary">User</span>
                <% } %>
              </td>
              <td>
                <% if (u.photo) { %>
                  <img src="<%= u.photo %>" alt="<%= u.username %>"
                       style="width:40px;height:40px;border-radius:50%;object-fit:cover;border:2px solid var(--accent-color);">
                <% } else { %>
                  <span class="text-muted"><i class="bi bi-person-circle" style="font-size:40px;"></i></span>
                <% } %>
              </td>
              <% if (user.role === 'A') { %>
                <td>
                  <a href="/users/<%= u.userid %>/edit" class="btn btn-sm btn-primary me-1">
                    <i class="bi bi-pencil-fill"></i> Edit
                  </a>
                  <form action="/users/<%= u.userid %>/delete" method="POST" style="display:inline;">
                    <button class="btn btn-sm btn-danger"
                            onclick="return confirm('Delete <%= u.username %>? This cannot be undone.');">
                      <i class="bi bi-trash-fill"></i> Delete
                    </button>
                  </form>
                </td>
              <% } %>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
