<%- include('../partials/header', { title: 'Donations', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-cash-coin"></i> Donations</h1>
    <p>Track and manage participant donations</p>
  </div>
</div>

<div class="container">
  <div class="card">
    <div class="mb-3">
      <a href="/donations/new" class="btn btn-success">
        <i class="bi bi-plus-circle-fill"></i> Add New Donation
      </a>
    </div>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Amount</th>
            <th>Participant ID</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% donations.forEach(d => { %>
            <tr>
              <td><%= d.donationid %></td>
              <td><%= d.donationdate || '—' %></td>
              <td><strong>$<%= d.donationamount || '0.00' %></strong></td>
              <td><%= d.participantid || '—' %></td>
              <td>
                <form action="/donations/<%= d.donationid %>/delete" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-sm btn-danger"
                          onclick="return confirm('Delete this donation? This cannot be undone.');">
                    <i class="bi bi-trash-fill"></i> Delete
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
