<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Donations</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <h1>Donations</h1>
    <a href="/donations/new" class="btn">Add New Donation</a>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Date</th>
          <th>Amount</th>
          <th>Participant ID</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% donations.forEach(d => { %>
          <tr>
            <td><%= d.donationid %></td>
            <td><%= d.donationdate || '—' %></td>
            <td><%= d.donationamount || '—' %></td>
            <td><%= d.participantid || '—' %></td>
            <td>
              <!-- if you add show/edit routes later, link them here -->
              <form action="/donations/<%= d.donationid %>/delete" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
