<%- include('../partials/header', { title: 'Donations', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-cash-coin"></i> Donations</h1>
    <p>Track and manage participant donations</p>
  </div>
</div>

<div class="container">
  <div class="card">
    <% if (user && user.role === 'admin') { %>
    <div class="mb-3">
      <a href="/donations/new" class="btn btn-success">
        <i class="bi bi-plus-circle-fill"></i> Add New Donation
      </a>
    </div>
    <% } %>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>
              <a href="?sortBy=donationdate&sortOrder=<%= sortBy === 'donationdate' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Date
                <% if (sortBy === 'donationdate') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=donationamount&sortOrder=<%= sortBy === 'donationamount' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Amount
                <% if (sortBy === 'donationamount') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <th>
              <a href="?sortBy=userfirstname&sortOrder=<%= sortBy === 'userfirstname' && sortOrder === 'asc' ? 'desc' : 'asc' %>" style="color: inherit; text-decoration: none; cursor: pointer; white-space: nowrap;">
                Name
                <% if (sortBy === 'userfirstname') { %>
                  <i class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                <% } else { %>
                  <i class="bi bi-arrow-down-up" style="opacity: 0.3; font-size: 0.8em;"></i>
                <% } %>
              </a>
            </th>
            <% if (user && user.role === 'admin') { %>
            <th>Actions</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% donations.forEach(d => { %>
          <tr>
            <td>
              <% if (d.donationdate) { %>
                <%= new Date(d.donationdate).toLocaleString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                  hour: '2-digit',
                  minute: '2-digit'
                }) %>
              <% } else { %>
                —
              <% } %>
            </td>
            <td><strong>$<%= d.donationamount || '0.00' %></strong></td>
            <td><%= d.userfirstname || '—' %> <%= d.userlastname || '—' %></td>
            <% if (user && user.role === 'admin') { %>
            <td>
              <form
                action="/donations/<%= d.donationid %>/delete"
                method="POST"
                style="display: inline"
              >
                <button
                  type="submit"
                  class="btn btn-sm btn-danger"
                  onclick="return confirm('Delete this donation? This cannot be undone.');"
                >
                  <i class="bi bi-trash-fill"></i> Delete
                </button>
              </form>
            </td>
            <% } %>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
