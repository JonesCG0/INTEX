<%- include('../partials/header', { title: 'Donations', user: user }) %>

<div class="page-header">
  <div class="container">
    <h1><i class="bi bi-cash-coin"></i> Donations</h1>
    <p>Track and manage participant donations</p>
  </div>
</div>

<div class="container">
  <div class="card">
    <% if (user && user.role === 'admin') { %>
    <div class="mb-3">
      <a href="/donations/new" class="btn btn-success">
        <i class="bi bi-plus-circle-fill"></i> Add New Donation
      </a>
    </div>
    <% } %>

    <div
      class="d-flex flex-column flex-lg-row align-items-lg-center gap-2 mb-3"
    >
      <div class="d-flex align-items-center gap-2 flex-grow-1 flex-lg-grow-0">
        <input
          type="search"
          class="form-control w-auto"
          style="min-width: 240px; max-width: 320px"
          placeholder="Search donations"
          aria-label="Search donations"
          data-search-for="donations-table"
        />
        <nav aria-label="Donations pagination (top)">
          <ul
            class="pagination pagination-sm mb-0 pagination-soft"
            data-pagination-for="donations-table"
          ></ul>
        </nav>
      </div>
      <div class="d-flex align-items-center gap-2 ms-lg-auto">
        <label for="donations-page-size" class="text-muted small mb-0"
          >Rows/page</label
        >
        <select
          id="donations-page-size"
          class="form-select form-select-sm w-auto"
          data-page-size-for="donations-table"
        >
          <option value="10">10</option>
          <option value="20" selected>20</option>
          <option value="30">30</option>
          <option value="40">40</option>
          <option value="50">50</option>
        </select>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table" data-table-id="donations-table">
        <thead>
          <tr>
            <th>
              <a
                href="?sortBy=donationdate&sortOrder=<%= sortBy === 'donationdate' && sortOrder === 'asc' ? 'desc' : 'asc' %>"
                style="
                  color: inherit;
                  text-decoration: none;
                  cursor: pointer;
                  white-space: nowrap;
                "
              >
                Date <% if (sortBy === 'donationdate') { %>
                <i
                  class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"
                ></i>
                <% } else { %>
                <i
                  class="bi bi-arrow-down-up"
                  style="opacity: 0.3; font-size: 0.8em"
                ></i>
                <% } %>
              </a>
            </th>
            <th>
              <a
                href="?sortBy=donationamount&sortOrder=<%= sortBy === 'donationamount' && sortOrder === 'asc' ? 'desc' : 'asc' %>"
                style="
                  color: inherit;
                  text-decoration: none;
                  cursor: pointer;
                  white-space: nowrap;
                "
              >
                Amount <% if (sortBy === 'donationamount') { %>
                <i
                  class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"
                ></i>
                <% } else { %>
                <i
                  class="bi bi-arrow-down-up"
                  style="opacity: 0.3; font-size: 0.8em"
                ></i>
                <% } %>
              </a>
            </th>
            <th>
              <a
                href="?sortBy=userfirstname&sortOrder=<%= sortBy === 'userfirstname' && sortOrder === 'asc' ? 'desc' : 'asc' %>"
                style="
                  color: inherit;
                  text-decoration: none;
                  cursor: pointer;
                  white-space: nowrap;
                "
              >
                Name <% if (sortBy === 'userfirstname') { %>
                <i
                  class="bi bi-arrow-<%= sortOrder === 'asc' ? 'up' : 'down' %>"
                ></i>
                <% } else { %>
                <i
                  class="bi bi-arrow-down-up"
                  style="opacity: 0.3; font-size: 0.8em"
                ></i>
                <% } %>
              </a>
            </th>
          </tr>
        </thead>
        <tbody>
          <% donations.forEach(d => { %>
          <tr>
            <td>
              <% if (d.donationdate) { %> <%= new
              Date(d.donationdate).toLocaleString('en-US', { year: 'numeric',
              month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit'
              }) %> <% } else { %> — <% } %>
            </td>
            <td><strong>$<%= d.donationamount || '0.00' %></strong></td>
            <td><%= d.userfirstname || '—' %> <%= d.userlastname || '—' %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <div class="d-flex justify-content-center mt-3">
      <nav aria-label="Donations pagination">
        <ul
          class="pagination pagination-sm mb-0 pagination-soft"
          data-pagination-for="donations-table"
        ></ul>
      </nav>
    </div>
  </div>
</div>

<%- include('../partials/footer-scripts') %>
