<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Donations</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container">
    <h1>Donations</h1>
    <a href="/donations/new" class="btn">Add New Donation</a>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Amount</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% donations.forEach(donation => { %>
          <tr>
            <td><%= donation.donationid %></td>
            <td>$<%= donation.amount || '0.00' %></td>
            <td><%= donation.date || 'N/A' %></td>
            <td>
              <a href="/donations/<%= donation.donationid %>">View</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
