<%- include('partials/header', { title: 'Ella Rises - Home', user: user }) %>

</div> <!-- Close main-content opened by header -->

<style>
  .hero-section {
    padding: 30px 0 80px 0;
    color: #3a3f3b;
    position: relative;
    overflow: hidden;
    margin-top: 0;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('/Mural_072.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0.6;
    z-index: 0;
  }

  .hero-section::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #ffd8d1, #f9afb1);
    opacity: .4;
    z-index: 1;
  }

  .hero-section .container {
    position: relative;
    z-index: 2;
  }

  .hero-section h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .hero-section p {
    font-size: 1.4rem;
    margin-bottom: 30px;
    font-weight: 600;
    opacity: 0.95;
  }

  .btn-custom-primary {
    background-color: #ffffff;
    color: #d4654c;
    border: none;
    padding: 14px 35px;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 50px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .btn-custom-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
    background-color: #faf8f5;
    color: #d4654c;
  }

  .stats-section {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 40px;
    margin-top: 50px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

  .stat-item {
    text-align: center;
    padding: 20px;
  }

  .stat-item i {
    font-size: 3rem;
    color: #d4654c;
    margin-bottom: 15px;
  }

  .stat-item h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #d4654c;
    margin: 10px 0;
    min-height: 60px;
  }

  .stat-item h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2c2c2c;
    margin: 0;
  }

  .features-section {
    padding: 80px 0;
    background-color: #faf8f5;
  }

  .section-title {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-title h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c2c2c;
    margin-bottom: 15px;
  }

  .section-title p {
    font-size: 1.1rem;
    color: #8b6f47;
    font-weight: 400;
  }

  .feature-card {
    background: #ffffff;
    border-radius: 15px;
    padding: 0;
    margin-bottom: 30px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    height: 100%;
    border: 2px solid transparent;
    overflow: hidden;
  }

  .feature-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 30px rgba(212, 101, 76, 0.15);
    border-color: #e8a87c;
  }

  .feature-card img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    display: block;
  }

  .features-section a {
    text-decoration: none;
  }

  .feature-card h3 {
    color: #2c2c2c;
    font-size: 1.4rem;
    font-weight: 600;
    margin: 0;
    padding: 20px;
    text-align: center;
  }

  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 2rem;
    }
    .hero-section p {
      font-size: 1rem;
    }
    .stat-item {
      margin-bottom: 20px;
    }
  }

  /* Supporters Section */
  .supporters-section {
    background-color: #ffffff;
    padding: 80px 0;
    text-align: center;
  }

  .supporters-section h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c2c2c;
    margin-bottom: 20px;
  }

  .supporters-section p {
    font-size: 1.1rem;
    color: #2c2c2c;
    margin-bottom: 10px;
    line-height: 1.6;
  }

  .supporters-section .highlight {
    font-weight: 600;
    color: #2c2c2c;
  }

  .supporter-logos {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 60px;
    margin-top: 60px;
  }

  .supporter-logos img,
  .supporter-logos svg,
  .supporter-logos > div,
  .supporter-logos a {
    max-height: 100px;
    max-width: 250px;
    height: 100px;
    width: auto;
    object-fit: contain;
    filter: grayscale(0%);
    opacity: 1;
    transition: all 0.3s ease;
    display: block;
  }

  .supporter-logos img:hover,
  .supporter-logos svg:hover,
  .supporter-logos > div:hover {
    transform: scale(1.08);
  }

  @media (max-width: 768px) {
    .supporter-logos {
      gap: 40px;
    }

    .supporter-logos img,
    .supporter-logos svg,
    .supporter-logos > div,
    .supporter-logos a {
      max-height: 80px;
      max-width: 200px;
      height: 80px;
    }
  }
</style>

<!-- Hero Section -->
<div class="hero-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-12 text-center">
        <% if (user) { %>
          <h1>Welcome Back, <%= user.username %>!</h1>
          <img src="/Ella_Rises_Logo.avif" alt="Ella Rises Logo" />
          <p>
Inviting young women to pursue higher education and embrace their heritage by providing culturally rooted programs and educational experiences.</p>
          <% if (user.role === 'admin') { %>
          <a href="/dashboard" class="btn btn-custom-primary">
            <i class="bi bi-speedometer2"></i> Go to Dashboard
          </a>
          <% }%>
        <% } else { %>
          <h1>Welcome to</h1>
          <img src="/Ella_Rises_Logo.avif" alt="Ella Rises Logo" />
          <p>
Inviting young women to pursue higher education and embrace their heritage by providing culturally rooted programs and educational experiences.</p>
          <a href="/auth/login" class="btn btn-custom-primary">
            <i class="bi bi-box-arrow-in-right"></i> Get Started
          </a>
        <% } %>

        <!-- Stats Section -->
        <% if (user) { %>
          <div class="stats-section">
            <div class="row">
              <div class="col-md-3 col-6 stat-item">
                <i class="bi bi-people-fill"></i>
                <h2><%= stats.participants %></h2>
                <h3>Participants</h3>
              </div>
              <div class="col-md-3 col-6 stat-item">
                <i class="bi bi-calendar-event"></i>
                <h2><%= stats.events %></h2>
                <h3>Events</h3>
              </div>
              <div class="col-md-3 col-6 stat-item">
                <i class="bi bi-flag-fill"></i>
                <h2><%= stats.milestones %></h2>
                <h3>Milestones</h3>
              </div>
              <div class="col-md-3 col-6 stat-item">
                <i class="bi bi-currency-dollar"></i>
                <h2>$<%= Number(stats.donations).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></h2>
                <h3>Donations</h3>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

