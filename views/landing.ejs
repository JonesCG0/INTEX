<style>
  .hero-section {
    background: linear-gradient(135deg, #d4654c 0%, #8b6f47 100%);
    padding: 100px 0 80px 0;
    color: #ffffff;
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="rgba(255,255,255,0.1)" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,149.3C960,160,1056,160,1152,138.7C1248,117,1344,75,1392,53.3L1440,32L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat bottom;
    background-size: cover;
    opacity: 0.3;
  }

  .hero-section .container {
    position: relative;
    z-index: 1;
  }

  .hero-section h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .hero-section p {
    font-size: 1.2rem;
    margin-bottom: 30px;
    font-weight: 300;
    opacity: 0.95;
  }

  .btn-custom-primary {
    background-color: #ffffff;
    color: #d4654c;
    border: none;
    padding: 14px 35px;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 50px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .btn-custom-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
    background-color: #faf8f5;
    color: #d4654c;
  }

  .stats-section {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 40px;
    margin-top: 50px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

  .stat-item {
    text-align: center;
    padding: 20px;
  }

  .stat-item i {
    font-size: 3rem;
    color: #d4654c;
    margin-bottom: 15px;
  }

  .stat-item h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2c2c2c;
    margin: 0;
  }

  .features-section {
    padding: 80px 0;
    background-color: #faf8f5;
  }

  .section-title {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-title h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c2c2c;
    margin-bottom: 15px;
  }

  .section-title p {
    font-size: 1.1rem;
    color: #8b6f47;
    font-weight: 400;
  }

  .feature-card {
    background: #ffffff;
    border-radius: 15px;
    padding: 40px 30px;
    margin-bottom: 30px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    height: 100%;
    border: 2px solid transparent;
  }

  .feature-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 30px rgba(212, 101, 76, 0.15);
    border-color: #e8a87c;
  }

  .feature-card i {
    font-size: 3rem;
    color: #d4654c;
    margin-bottom: 25px;
    display: block;
  }

  .feature-card h3 {
    color: #2c2c2c;
    font-size: 1.4rem;
    font-weight: 600;
    margin-bottom: 15px;
  }

  .feature-card p {
    color: #8b6f47;
    font-size: 1rem;
    line-height: 1.7;
    margin: 0;
  }

  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 2rem;
    }
    .hero-section p {
      font-size: 1rem;
    }
    .stat-item {
      margin-bottom: 20px;
    }
  }
</style>

<!-- Hero Section -->
<div class="hero-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-12 text-center">
        <% if (user) { %>
          <h1>Welcome Back, <%= user.username %>!</h1>
          <p>Empowering change, one step at a time</p>
          <a href="/dashboard" class="btn btn-custom-primary">
            <i class="bi bi-speedometer2"></i> Go to Dashboard
          </a>
        <% } else { %>
          <h1>Welcome to Ella Rises</h1>
          <p>Supporting participants on their journey to independence and growth</p>
          <a href="/auth/login" class="btn btn-custom-primary">
            <i class="bi bi-box-arrow-in-right"></i> Get Started
          </a>
        <% } %>

        <!-- Stats Section -->
        <% if (user) { %>
          <div class="stats-section">
            <div class="row">
              <div class="col-md-3 col-6 stat-item">
                <i class="bi bi-people-fill"></i>
                <h3>Participants</h3>
              </div>
              <div class="col-md-3 col-6 stat-item">
                <i class="bi bi-calendar-event"></i>
                <h3>Events</h3>
              </div>
              <div class="col-md-3 col-6 stat-item">
                <i class="bi bi-flag-fill"></i>
                <h3>Milestones</h3>
              </div>
              <div class="col-md-3 col-6 stat-item">
                <i class="bi bi-currency-dollar"></i>
                <h3>Donations</h3>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Features Section -->
