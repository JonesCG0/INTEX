    }

    .teapot-icon {
      font-size: 120px;
      animation: steam 2s ease-in-out infinite;
      display: inline-block;
    }

    @keyframes steam {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      25% { transform: translateY(-10px) rotate(-5deg); }
      50% { transform: translateY(-20px) rotate(0deg); }
      75% { transform: translateY(-10px) rotate(5deg); }
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.9); }
      to { opacity: 1; transform: scale(1); }
    }

    h1 {
      font-size: 4rem;
      font-weight: 700;
      margin: 30px 0 20px 0;
      text-shadow: 3px 3px 6px rgba(0,0,0,0.3);
    }

    p {
      font-size: 1.5rem;
      margin-bottom: 30px;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .error-code {
      font-size: 6rem;
      font-weight: 900;
      margin-bottom: 20px;
      opacity: 0.9;
      text-shadow: 4px 4px 8px rgba(0,0,0,0.4);
    }

    .btn-home {
      background: white;
      color: #D4654C;
      border: none;
      padding: 15px 40px;
      font-size: 1.2rem;
      font-weight: 600;
      border-radius: 50px;
      text-decoration: none;
      display: inline-block;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .btn-home:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 20px rgba(0,0,0,0.3);
      color: #D4654C;
    }

    .tea-facts {
      margin-top: 40px;
      font-size: 1rem;
      opacity: 0.9;
      font-style: italic;
    }

    /* Floating tea cups */
    .tea-cup {
      position: absolute;
      font-size: 40px;
      opacity: 0.2;
      animation: float 6s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-30px) rotate(10deg); }
    }

    .tea-cup:nth-child(1) { top: 10%; left: 10%; animation-delay: 0s; }
    .tea-cup:nth-child(2) { top: 20%; right: 15%; animation-delay: 1s; }
    .tea-cup:nth-child(3) { bottom: 15%; left: 20%; animation-delay: 2s; }
    .tea-cup:nth-child(4) { bottom: 25%; right: 10%; animation-delay: 1.5s; }
    .tea-cup:nth-child(5) { top: 50%; left: 5%; animation-delay: 0.5s; }
    .tea-cup:nth-child(6) { top: 60%; right: 8%; animation-delay: 2.5s; }
  </style>
